{% extends 'base.html.twig' %}

{% block title %}Terrassement{% endblock %}

{% block body %}

    <link href="css/stylePrestaTest.css" rel="stylesheet">

    {% set compteur = 0 %}

    <table>
        {% for unePresta in prestas %}
            {% set compteur = compteur + 1 %}
            {% if compteur % 4 == 0 %}
                <tr></tr>
                {% set compteur = 1 %}
            {% endif %}

            <td>
                <article class="card">
                    <header class="card__thumb">
                        <a href="{{ path('detailsPresta', {id: unePresta.id}) }}">
                        <img src={{unePresta.lienImg}}>
                        </a>
                    </header>
                    <div class="card__body">
                        <h2 class="card__title"><a href="{{ path('detailsPresta', {id: unePresta.id}) }}">{{unePresta.titre}}</a></h2>
                    </div>
                    <footer class="card__footer">
                        {{unePresta.tarif}} â‚¬/m2
                    </footer>
                </article>
            </td>
            
        {% endfor %}

        {% if app.user.email is defined and app.user.email == 'loreinthierry@gmail.com' %}

            <tr>
                <td>
                    <article class="card">
                        <header class="card__thumb">
                            <a href="{{ path('AjoutPresta') }}">
                            <img src="assets/plus.png">
                            </a>
                        </header>
                        <div class="card__body">
                            <h2 class="card__title"><a href="{{ path('AjoutPresta') }}">Ajouter une prestation</a></h2>
                        </div>
                    </article>
                </td>
            </tr>

        {% endif %}

    </table>

{% endblock %}
