{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<form>
    <div class="form-group">
      <label for="exampleInputEmail1" class="form-label mt-4">Adresse mail</label>
      <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="ex : email@example.com">
      <small id="emailHelp" class="form-text text-muted">Avec TerraBat vos données seront préservés.</small>
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Mot de passe</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe">
    </div>
    <div class="form-group">
      <label for="exampleInputPassword1" class="form-label mt-4">Confirmation du mot de passe</label>
      <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Mot de passe">
    </div>
    <div class="form-group">
      <label for="exampleTextarea" class="form-label mt-4">Demande</label>
      <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
    </div>
    <button name="button">Valider</button>
</form>
{% endblock %}
